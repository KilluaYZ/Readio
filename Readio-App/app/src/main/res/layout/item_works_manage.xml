<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    android:layout_margin="10dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/paler_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/manageReadButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:layout_weight="4"
            android:layout_margin="5dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#FFFFFF">
                <TextView
                    android:id="@+id/manageWorkTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yuanti"
                    android:padding="5dp"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/manageSeriesTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/yuanti"
                android:text="系列名："
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/managePublishedTime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/yuanti"
                android:text="发布时间："
                android:textStyle="bold"
                android:gravity="bottom"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点赞"
                android:gravity="center"
                android:fontFamily="@font/yuanti"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/manageLikeNumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="4dp"
                android:textColor="@color/dark_grey"
                android:textSize="14sp"
                android:fontFamily="@font/kalam_regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:gravity="center"
                android:fontFamily="@font/yuanti"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/manageCollectNumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:gravity="center"
                android:layout_margin="4dp"
                android:fontFamily="@font/kalam_regular"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/dark_grey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="评论"
                android:gravity="center"
                android:fontFamily="@font/yuanti"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/manageCommentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:gravity="center"
                android:layout_margin="4dp"
                android:fontFamily="@font/kalam_regular"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/dark_grey"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
                android:id="@+id/editWorkButton"
                android:padding="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="编辑"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:background="@drawable/biankuang"/>
        <TextView
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:id="@+id/withdrawWorkButton"
            android:padding="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="撤回"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@drawable/biankuang"/>

        <TextView
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:id="@+id/deleteWorkButton"
            android:padding="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="删除"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@drawable/biankuang"/>
    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>